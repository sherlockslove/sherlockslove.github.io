  });
});


//Works

var adOffset;
  $(window).on('load resize',function(){
      adOffset = $('.workIntro').offset().top;
  });
  
  $(function() {
    $(window).scroll(function () {
        if ($(this).scrollTop() > adOffset - 120) {
            $('.worksHead ').addClass('workActive');
        } else {
            $('.worksHead ').removeClass('workActive');
      }
  });
});


$(document).ready(function(){
  $(".nextBtn").mouseover(function(){
      $('.workNext').addClass('active');
    }).mouseout(function(){
      $('.workNext').removeClass('active');
    });
});

$(document).ready(function(){
  $('.shareBtn').click(function () {
      $('.shareBtn').toggleClass('active');
      $('.share').toggleClass('active');
  });
});


$(function() {
    $(window).scroll(function () {
        if ($(this).scrollTop() > 70) {
        //ボタンの表示方法
            $('workTitle').addClass('fadeOut');
            $('workCat').addClass('fadeOut');
        } else {
        //ボタンの非表示方法
            $('workTitle').removeClass('fadeOut');
            $('workCat').removeClass('fadeOut');
        }
    });
});


//Philosophy - Btn

var scrollPos;
$('.missionBtn').click(function () {
if(!$('.missionBtn').hasClass('is-active')){
  if ($(".ourPhilosophy").hasClass("active")) {
    
    //class activeがあれば
    if ($(".bgOne").hasClass("active")) {

      $( '.philoClose' ).removeClass( 'change' );
      $( '.philoClose' ).removeClass( 'change2' );

      $('.bgTwo').addClass('active2');
      $('.bgOne').removeClass('active');

      setTimeout(function() {
        $('.bgTwo').addClass('active3');
      }, 150);

      setTimeout(function() {
        $('.ourMission').addClass('active2');
        $doc = $('.ourMission');
        var scrTop = $('.ourMission').offset().bottom - 0;
        $doc.animate({ scrollTop: scrTop }, '500', 'easeOutQuad');
      }, 250);

      setTimeout(function() {
        $('.ourMission .philoInner').addClass('active');
        $('html').addClass('is-fixed');
        $('.philoCont .nextCont .right > .inner').removeClass('fadeInUp');
        $('.philoCont .nextCont .left .image').removeClass('fadeInUp');

        $('.philoCont .about .right').removeClass('fadeInUp');
        $('.underPhiloNav').removeClass('fadeInUp');

        $('.philoCont .about').removeClass('fadeInUp');
        $('.philoCont .about .left').removeClass('fadeInUp');
        $('.guideline').removeClass('fadeInUp');

        $('.ourVision').removeClass('active');
        $('.ourValue').removeClass('active');
        $('.ourVision .philoInner').removeClass('active');
        $('.ourValue .philoInner').removeClass('active');

        $('.philoCont').addClass('fixed');
      }, 1000);

      setTimeout(function() {
        
        $('.ourPhilosophy .underNav li').removeClass('is-active');
        
        $('.bgTwo').removeClass('active2');
        $('.bgTwo').removeClass('active3');
        $('.bgTwo').addClass('active');
        $('.ourMission').addClass('active');
      }, 1000);

      setTimeout(function() {
        $('.ourMission').removeClass('active2');
      }, 1300);

      setTimeout(function() {
        $('.philoCont').removeClass('fixed');
      }, 3650);

      setTimeout(function() {
        $('.ourMission .missionBtn').addClass('is-active');
      }, 4800);


    } else if ($(".bgTwo").hasClass("active")) {
      
      $( '.philoClose' ).removeClass( 'change' );
      $( '.philoClose' ).removeClass( 'change2' );

      $('.bgOne').addClass('active2');
      $('.bgTwo').removeClass('active');

      setTimeout(function() {
        $('.bgOne').addClass('active3');
      }, 150);

      setTimeout(function() {
        $('.ourMission').addClass('active2');
        $doc = $('.ourMission');
        var scrTop = $('.ourMission').offset().bottom - 0;
        $doc.animate({ scrollTop: scrTop }, '500', 'easeOutQuad');
      }, 250);

      setTimeout(function() {
        $('.ourMission .philoInner').addClass('active');
        $('html').addClass('is-fixed');
        $('.philoCont .nextCont .right > .inner').removeClass('fadeInUp');
        $('.philoCont .nextCont .left .image').removeClass('fadeInUp');

        $('.philoCont .about .right').removeClass('fadeInUp');
        $('.underPhiloNav').removeClass('fadeInUp');

        $('.philoCont .about').removeClass('fadeInUp');
        $('.philoCont .about .left').removeClass('fadeInUp');
        $('.guideline').removeClass('fadeInUp');
        $('.ourVision').removeClass('active');
        $('.ourValue').removeClass('active');
        $('.ourVision .philoInner').removeClass('active');
        $('.ourValue .philoInner').removeClass('active');

        $('.philoCont').addClass('fixed');
      }, 1000);

      setTimeout(function() {
        
        $('.ourPhilosophy .underNav li').removeClass('is-active');
        
        $('.bgOne').removeClass('active2');
        $('.bgOne').removeClass('active3');
        
        $('.bgOne').addClass('active');
        $('.ourMission').addClass('active');
      }, 1000);

      setTimeout(function() {
        $('.ourMission').removeClass('active2');
      }, 1300);

      setTimeout(function() {
        $('.philoCont').removeClass('fixed');
      }, 3650);

      setTimeout(function() {
        $('.ourMission .missionBtn').addClass('is-active');
      }, 4800);

    }

  } else if (!$(".ourPhilosophy").hasClass("active")) {
    //class activeがなければ

    $('.bgOne').addClass('active');
    $('.philoCont').addClass('fixed');
    scrollPos = $(window).scrollTop();
  
    setTimeout(function() {
      $('.ourMission').addClass('active');
      $doc = $('.ourMission');
      var scrTop = $('.ourMission').offset().bottom - 0;
      $doc.animate({ scrollTop: scrTop }, '500', 'easeOutQuad');
    }, 250);

    setTimeout(function() {
      $('.ourMission .philoInner').addClass('active');
      $('html').addClass('is-fixed');
    }, 1000);

    setTimeout(function() {
      $('.philoCont').removeClass('fixed');
    }, 3650);

    setTimeout(function() {
      $('.ourMission .missionBtn').addClass('is-active');
    }, 4800);
  }
}
});


$('.visionBtn').click(function () {
if(!$('.visionBtn').hasClass('is-active')){
  if ($(".ourPhilosophy").hasClass("active")) {
    
    //class activeがあれば
    if ($(".bgOne").hasClass("active")) {

      $( '.philoClose' ).removeClass( 'change' );
      $( '.philoClose' ).removeClass( 'change2' );

      $('.bgTwo').addClass('active2');
      $('.bgOne').removeClass('active');

      setTimeout(function() {
        $('.bgTwo').addClass('active3');
      }, 150);

      setTimeout(function() {
        $('.ourVision').addClass('active2');
        $doc = $('.ourVision');
        var scrTop = $('.ourVision').offset().bottom - 0;
        $doc.animate({ scrollTop: scrTop }, '500', 'easeOutQuad');
      }, 250);

      setTimeout(function() {
        $('.ourVision .philoInner').addClass('active');
        $('html').addClass('is-fixed');
        $('.philoCont .nextCont .right > .inner').removeClass('fadeInUp');
        $('.philoCont .nextCont .left .image').removeClass('fadeInUp');

        $('.philoCont .about .right').removeClass('fadeInUp');
        $('.underPhiloNav').removeClass('fadeInUp');

        $('.philoCont .about').removeClass('fadeInUp');
        $('.philoCont .about .left').removeClass('fadeInUp');
        $('.guideline').removeClass('fadeInUp');

        $('.ourMission').removeClass('active');
        $('.ourValue').removeClass('active');
        $('.ourMission .philoInner').removeClass('active');
        $('.ourValue .philoInner').removeClass('active');

        $('.philoCont').addClass('fixed');
      }, 1000);

      setTimeout(function() {
        $('.ourPhilosophy .underNav li').removeClass('is-active');
        
        $('.bgTwo').removeClass('active2');
        $('.bgTwo').removeClass('active3');
        
        $('.bgTwo').addClass('active');
        $('.ourVision').addClass('active');
        
      }, 1000);

      setTimeout(function() {
        $('.ourVision').removeClass('active2');
      }, 1300);

      setTimeout(function() {
        $('.philoCont').removeClass('fixed');
      }, 3650);

      setTimeout(function() {
        $('.ourVision .visionBtn').addClass('is-active');
      }, 4800);


    } else if ($(".bgTwo").hasClass("active")) {
      
      $( '.philoClose' ).removeClass( 'change' );
      $( '.philoClose' ).removeClass( 'change2' );

      $('.bgOne').addClass('active2');
      $('.bgTwo').removeClass('active');

      setTimeout(function() {
        $('.bgOne').addClass('active3');
      }, 150);

      setTimeout(function() {
        $('.ourVision').addClass('active2');
        $doc = $('.ourVision');
        var scrTop = $('.ourVision').offset().bottom - 0;
        $doc.animate({ scrollTop: scrTop }, '500', 'easeOutQuad');
      }, 250);

      setTimeout(function() {
        $('.ourVision .philoInner').addClass('active');
        $('html').addClass('is-fixed');
        $('.philoCont .nextCont .right > .inner').removeClass('fadeInUp');
        $('.philoCont .nextCont .left .image').removeClass('fadeInUp');

        $('.philoCont .about .right').removeClass('fadeInUp');
        $('.underPhiloNav').removeClass('fadeInUp');

        $('.philoCont .about').removeClass('fadeInUp');
        $('.philoCont .about .left').removeClass('fadeInUp');
        $('.guideline').removeClass('fadeInUp');

        $('.ourMission').removeClass('active');
        $('.ourValue').removeClass('active');
        $('.ourMission .philoInner').removeClass('active');
        $('.ourValue .philoInner').removeClass('active');

        $('.philoCont').addClass('fixed');
      }, 1000);

      setTimeout(function() {
        $('.ourPhilosophy .underNav li').removeClass('is-active');
        
        $('.bgOne').removeClass('active2');
        $('.bgOne').removeClass('active3');
       
        $('.bgOne').addClass('active');
        $('.ourVision').addClass('active');
        
      }, 1000);

      setTimeout(function() {
        $('.ourVision').removeClass('active2');
      }, 1300);

      setTimeout(function() {
        $('.philoCont').removeClass('fixed');
      }, 3650);

      setTimeout(function() {
        $('.ourVision .visionBtn').addClass('is-active');
      }, 4800);

    }

  } else if (!$(".ourPhilosophy").hasClass("active")) {
    //class activeがなければ

    $('.bgOne').addClass('active');
    $('.philoCont').addClass('fixed');
    scrollPos = $(window).scrollTop();
  
    setTimeout(function() {
      $('.ourVision').addClass('active');
      $doc = $('.ourVision');
      var scrTop = $('.ourVision').offset().bottom - 0;
      $doc.animate({ scrollTop: scrTop }, '500', 'easeOutQuad');
      
    }, 250);

    setTimeout(function() {
      $('.ourVision .philoInner').addClass('active');
      $('html').addClass('is-fixed');
    }, 1000);

    setTimeout(function() {
      $('.philoCont').removeClass('fixed');
    }, 3650);

    setTimeout(function() {
      $('.ourVision .visionBtn').addClass('is-active');
    }, 4800);
  }
}
});


$('.valueBtn').click(function () {
if(!$('.valueBtn').hasClass('is-active')){
  if ($(".ourPhilosophy").hasClass("active")) {
    
    //class activeがあれば
    if ($(".bgOne").hasClass("active")) {

      $( '.philoClose' ).removeClass( 'change' );
      $( '.philoClose' ).removeClass( 'change2' );
    
      $('.bgTwo').addClass('active2');
      $('.bgOne').removeClass('active');

      setTimeout(function() {
        $('.bgTwo').addClass('active3');
      }, 150);

      setTimeout(function() {
        $('.ourValue').addClass('active2');
        $doc = $('.ourValue');
        var scrTop = $('.ourValue').offset().bottom - 0;
        $doc.animate({ scrollTop: scrTop }, '500', 'easeOutQuad');
      }, 250);

      setTimeout(function() {
        $('.ourValue .philoInner').addClass('active');
        $('html').addClass('is-fixed');
        $('.philoCont .nextCont .right > .inner').removeClass('fadeInUp');
        $('.philoCont .nextCont .left .image').removeClass('fadeInUp');

        $('.philoCont .about .right').removeClass('fadeInUp');
        $('.underPhiloNav').removeClass('fadeInUp');

        $('.philoCont .about').removeClass('fadeInUp');
        $('.philoCont .about .left').removeClass('fadeInUp');
        $('.guideline').removeClass('fadeInUp');

        $('.ourMission').removeClass('active');
        $('.ourVision').removeClass('active');
        $('.ourMission .philoInner').removeClass('active');
        $('.ourVision .philoInner').removeClass('active');

        $('.philoCont').addClass('fixed');
      }, 1000);

      setTimeout(function() {
        $('.ourPhilosophy .underNav li').removeClass('is-active');
        
        $('.bgTwo').removeClass('active2');
        $('.bgTwo').removeClass('active3');
        
        $('.bgTwo').addClass('active');
        $('.ourValue').addClass('active');
      }, 1000);

      setTimeout(function() {
        $('.ourValue').removeClass('active2');
      }, 1300);

      setTimeout(function() {
        $('.philoCont').removeClass('fixed');
      }, 3650);

      setTimeout(function() {
        $('.ourValue .valueBtn').addClass('is-active');
      }, 4800);


    } else if ($(".bgTwo").hasClass("active")) {
      
      $( '.philoClose' ).removeClass( 'change' );
      $( '.philoClose' ).removeClass( 'change2' );
        
      $('.bgOne').addClass('active2');
      $('.bgTwo').removeClass('active');

      setTimeout(function() {
        $('.bgOne').addClass('active3');
      }, 150);

      setTimeout(function() {
        $('.ourValue').addClass('active2');
        $doc = $('.ourValue');
        var scrTop = $('.ourValue').offset().bottom - 0;
        $doc.animate({ scrollTop: scrTop }, '500', 'easeOutQuad');
      }, 250);

      setTimeout(function() {
        $('.ourValue .philoInner').addClass('active');
        $('html').addClass('is-fixed');
        $('.philoCont .nextCont .right > .inner').removeClass('fadeInUp');
        $('.philoCont .nextCont .left .image').removeClass('fadeInUp');

        $('.philoCont .about .right').removeClass('fadeInUp');
        $('.underPhiloNav').removeClass('fadeInUp');

        $('.philoCont .about').removeClass('fadeInUp');
        $('.philoCont .about .left').removeClass('fadeInUp');
        $('.guideline').removeClass('fadeInUp');

        $('.ourMission').removeClass('active');
        $('.ourVision').removeClass('active');
        $('.ourMission .philoInner').removeClass('active');
        $('.ourVision .philoInner').removeClass('active');

        $('.philoCont').addClass('fixed');
      }, 1000);

      setTimeout(function() {
        $('.ourPhilosophy .underNav li').removeClass('is-active');
    
        $('.bgOne').removeClass('active2');
        $('.bgOne').removeClass('active3');
        $('.ourValue').removeClass('active2');
        $('.bgOne').addClass('active');
        $('.ourValue').addClass('active');
      }, 1000);

      setTimeout(function() {
        $('.ourValue').removeClass('active2');
      }, 1300);

      setTimeout(function() {
        $('.philoCont').removeClass('fixed');
      }, 3650);

      setTimeout(function() {
        $('.ourValue .valueBtn').addClass('is-active');
      }, 4800);

    }

  } else if (!$(".ourPhilosophy").hasClass("active")) {
    //class activeがなければ

    $('.bgOne').addClass('active');
    $('.philoCont').addClass('fixed');
    scrollPos = $(window).scrollTop();
  
    setTimeout(function() {
      $('.ourValue').addClass('active');
      $doc = $('.ourValue');
      var scrTop = $('.ourValue').offset().bottom - 0;
      $doc.animate({ scrollTop: scrTop }, '500', 'easeOutQuad');
      
    }, 250);

    setTimeout(function() {
      $('.ourValue .philoInner').addClass('active');
      $('html').addClass('is-fixed');
    }, 1000);


    setTimeout(function() {
      $('.philoCont').removeClass('fixed');
    }, 3650);

    setTimeout(function() {
      $('.ourValue .valueBtn').addClass('is-active');
    }, 4800);
  }
}
});


//Philosophy - NextCont

$('.nextVision').click(function () {
  $('.missionTab').removeClass('is-active');
  $('.missionCont').hide();
  $('.visionTab').addClass('is-active');
  $('.visionCont').fadeIn(500);
});

$('.nextValue').click(function () {
  $('.visionTab').removeClass('is-active');
  $('.visionCont').hide();
  $('.valueTab').addClass('is-active');
  $('.valueCont').fadeIn(500);
});

$('.nextMission').click(function () {
  $('.valueTab').removeClass('is-active');
  $('.valueCont').hide();
  $('.missionTab').addClass('is-active');
  $('.missionCont').fadeIn(500);
});


//Philosophy - Close

$('.philoClose,.closeMessage').click(function () {

  $('.philoInner').removeClass('active');

  $('.ourPhilosophy.active').addClass('zIndex');
  $('.philosophyBg.active').addClass('zIndex');

  $('html').removeClass('is-fixed');
  $(window).scrollTop(scrollPos);

  setTimeout(function() {
    $('.tab').removeClass('is-active');
  }, 450);

  setTimeout(function() {
    $('.ourPhilosophy').removeClass('active');
  }, 550);

  setTimeout(function() {
    $('.philosophyBg').removeClass('active');
  }, 800);

  setTimeout(function() {
    $('.ourPhilosophy .underNav li').removeClass('is-active');
    $( '.philoClose' ).removeClass( 'change' );
    $('.philoCont .about .left').removeClass('fadeInUp');
    $('.philoCont .about .right').removeClass('fadeInUp');

    $('.guideline').removeClass('fadeInUp');
    $('.philoCont .nextCont .right > .inner').removeClass('fadeInUp');
    
    $('.philoCont .nextCont .left .image').removeClass('fadeInUp');

    $('.underPhiloNav').removeClass('fadeInUp');

    $('.ourPhilosophy').removeClass('zIndex');
    $('.philosophyBg').removeClass('zIndex');
  }, 1300);
});


//Philosophy - Next

$(function() {
  $(".philoCont .nextCont .nextBtn").mouseover(function(){
    $(".nextCont").addClass("active");
  }).mouseout(function(){
    $(".nextCont").removeClass("active");
  });
});

//Philosophy - SP

var mediaQuery = matchMedia('(max-width: 767px)');

// ページが読み込まれた時に実行
handle(mediaQuery);

// ウィンドウサイズが変更されても実行されるように
mediaQuery.addListener(handle);

function handle(mq) {
  if (mq.matches) {

    // ウィンドウサイズが768px以下のとき
    $(document).ready(function(){
    var hSize = $(window).height();
      $('.philoCont .mainImg').height(hSize);
      $('.mv').height(hSize - 20);
      $('.underMainImg').height(hSize - 229);
      $('.underDesc .left .image').height(hSize - 229);
      // アドレスバーを除いたサイズを付与
    });

    $('.humb').click(function () {
      var hSize = $(window).height();
      $('.humbCont .inner').height(hSize);
    });

    $('.humbClose').click(function () {
      var hSize = $(window).height();
      setTimeout(function() {
        $('.humbCont .inner').css('height','');
      }, 180);
    });
    
    $(window).resize(function(){ // ページをリサイズした時の処理
      var hSize = $(window).height();
      $('.philoCont .mainImg').height(hSize);
      $('.mv').height(hSize - 20);
      $('.underMainImg').height(hSize - 229);
      $('.underDesc .left .image').height(hSize - 229);
      // アドレスバーを除いたサイズを付与
    });

  } else if(matchMedia('(max-width: 1100px)').matches) {
  
    // ウィンドウサイズが1100px以下のとき
    $(document).ready(function(){
    var hSize = $(window).height();
      $('.philoCont .mainImg').height(hSize);
      $('.mv').height(hSize - 20);
      $('.underMainImg').height(hSize - 313);
      $('.underDesc .left .image').height(hSize - 313);
      // アドレスバーを除いたサイズを付与
    });

    $(window).resize(function(){ // ページをリサイズした時の処理
      var hSize = $(window).height();
      $('.philoCont .mainImg').height(hSize);
      $('.mv').height(hSize - 20);
      $('.underMainImg').height(hSize - 313);
      $('.underDesc .left .image').height(hSize - 313);
      // アドレスバーを除いたサイズを付与
    });


  } else {
    // それ以外
    $('.philoCont .mainImg').css('height','');
    $('.mv').css('height','');
  }
}



//Contact

(function($) {
  var position = $('form.wpcf7-form').offset().top - 210;
  $('.wpcf7').on('wpcf7:invalid', function() {
    $('html, body').animate({
      scrollTop: position
    }, 700);
  });
})(jQuery);


wpcf7c_scroll = function(unit_tag) {
    jQuery(jQuery.find("input[name=_wpcf7_unit_tag]")).each(function(){
        if(jQuery(this).val() == unit_tag) {
            var parent = jQuery(this).parents("form");
            var speed = 700; /* スクロールの速度 */
            var position = parent.offset().top - 210; /* 戻り位置 */
            if(jQuery('.wpcf7c-anchor').size() != 0) {
                position = jQuery('.wpcf7c-anchor').offset().top - 120; /* 戻り位置 */
            }
            jQuery("html, body").animate({scrollTop:position}, speed, "swing");
        }
    });
}


$('.wpcf7-confirm').click(function () {
  setTimeout(function() {
    if (!$(".wpcf7-back").hasClass("wpcf7c-force-hide")) {
      $(".contactNav .confirm").addClass("current");
    } else {
    }
  }, 500);
});

$('.wpcf7-back').click(function () {
  $(".contactNav .confirm").removeClass("current");
});

$('.wpcf7-submit').click(function () {
  $(".contactNav .complete").addClass("current");
});

$('.formCont .wpcf7-form-control').click(function () {
  if ($(".contactNav .complete").hasClass("current")) {
    $(".contactNav .confirm").removeClass("current");
    $(".contactNav .complete").removeClass("current");
    $(".wpcf7-mail-sent-ok").css("display","none");
  } else {
  }
});




function init() {
  if ($('select option[selected=selected]').attr('selected')) {
    $('select').val($('select option[selected=selected]').val());
  }
  else {
    $('select option:first').prop('selected', 'selected');
  }
}

jQuery(function () {
    init();
    $(window).on('pageshow', init);
});


