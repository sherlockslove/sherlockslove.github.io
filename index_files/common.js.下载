  });
});

$(document).on('mouseover',   function(e) {
  if (!$(e.target).closest('.journalBtn').length) {
    if ($(".journalBtn").hasClass("underline")) {
      
      $('#headWrap').removeClass('slideLine');
      $('.journalBtn').removeClass('underline');
      $('.addCurrent').removeClass('closeline');
    
    } else if ($(".aboutBtn").hasClass("addCurrent")) {
      
      $('#headWrap').removeClass('slideLine');
    
    }
  }
});



//HumbBtn
$(document).ready(function(){
  $('.humb').click(function () {
    $('.humbBg').addClass('active');
    $('.humbCont').addClass('active');
    $('.normalImage').addClass('slideIn');
    $('header').addClass('humbActive');
  });
});

$(document).ready(function(){
  $('.humbClose').click(function () {
    $('.humbCont').removeClass('active');
    $('.humbSubCont .image').addClass('delay');
    setTimeout(function(){
     	$('header').addClass('humbActive2');
      $('header').addClass('humbActive2');
     	setTimeout(function() {
        	$('header').removeClass('humbActive2');
        	$('header').removeClass('humbActive');
          $('.humbSubCont').not('.normalSubCont').removeClass('active');
          $('.normalSubCont').addClass('active');
          $('.humbNavBtn').removeClass('active');
          $('.normalImage').removeClass('slideIn');
          setTimeout(function() {
            $('.subBtn').removeClass('active');
            $('.humbSubCont .image').removeClass('delay');
             setTimeout(function() {
              $('.humbBg').removeClass('active');
            }, 600);
          }, 400);
    	}, 100);
	},100);
	
  });
});


