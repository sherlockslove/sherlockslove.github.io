//HumbSp

$('.spServe').click(function () {

  $('.humbMainNav').addClass('fadeOut');
  setTimeout(function() {
    $('.humbServNav').addClass('active');
    $('.humbMainNav').removeClass('fadeOut');
    $('.humbMainNav').addClass('active');
  }, 350);

});

$('.spAbout').click(function () {

  $('.humbMainNav').addClass('fadeOut');
  setTimeout(function() {
    $('.humbAboutNav').addClass('active');
    $('.humbMainNav').removeClass('fadeOut');
    $('.humbMainNav').addClass('active');
  }, 350);

});

$('.humbBackBtn').click(function () {
  
  $('.humbSpSubNav').addClass('fadeOut');

  setTimeout(function() {
    $('.humbMainNav').removeClass('active');
    $('.humbSpSubNav').removeClass('active');
    $('.humbSpSubNav').removeClass('fadeOut');    
  }, 450);

});


//Service

$(window).on('load', function(){
    var w = $(window).width();
    var x = 767;
  
    if (w <= x) {
    //767px以下の場合
      jQuery(function($){
        $('.servList').click(function(){
          $doc = $('html,body');
          var scrTop = $('.sectService').offset().top - 81;
        $doc.animate({ scrollTop: scrTop }, '500', 'easeOutQuad');
        });
      });

    } else {
    //767px以上の場合
      jQuery(function($){
        $('.servList').click(function(){
          $doc = $('html,body');
          var scrTop = $('.sectService').offset().top - 92;
        $doc.animate({ scrollTop: scrTop }, '500', 'easeOutQuad');
        });
      });
    }
});




//Service - Close

$(document).ready(function(){
  $('.servClose').click(function () {
  	$('.servServImg').addClass('active');
  	$('.servAboutImg').removeClass('active2');
    $('.servAboutCont').removeClass('active');
    $('.servMediaImg').removeClass('active2');
    $('.servMediaCont').removeClass('active');
    $('.servProductImg').removeClass('active2');
    $('.servProductCont').removeClass('active');
    $('.servWorksImg').removeClass('active2');
    $('.servWorksCont').removeClass('active');
  });
});


//Service - About

$(document).ready(function(){
	$(".servAboutBtn").mouseover(function(){
		$('.servServImg').removeClass('active');
    	$('.servAboutImg').addClass('active');
    	$('.servAboutBtn').addClass('active');
  	}).mouseout(function(){
  		$('.servServImg').addClass('active');
    	$('.servAboutImg').removeClass('active');
    	$('.servAboutBtn').removeClass('active');
  	});
});

