
//cursor
if(!navigator.userAgent.match(/(iPhone|iPad|iPod|Android)/)){
    $(function(){
        var body = document.body;
        var cursor = document.createElement("div");
        var stalker = document.createElement("div");
        cursor.id = "cursor";
        stalker.id = "stalker";
        body.appendChild(cursor);
        body.appendChild(stalker);
        body.addEventListener("mousemove", function(e) {
              cursor.style.left = e.clientX + "px";
              cursor.style.top = e.clientY + "px";
              stalker.style.left = e.clientX + "px";
              stalker.style.top = e.clientY + "px";
        }, false);
 
        $("a").on("mouseenter", function() {
            $('#cursor').addClass("active");
            $('#stalker').addClass("active");
        });
 
        $("a").on("mouseleave", function() {
            $('#cursor').removeClass("active");
            $('#stalker').removeClass("active");
        });

        $(".aboutSlider .slick-list").on("mouseenter", function() {
            $('#cursor').addClass("change");
            $('#stalker').addClass("change");
        });
 
        $(".aboutSlider .slick-list").on("mouseleave", function() {
            $('#cursor').removeClass("change");
            $('#stalker').removeClass("change");
        });

        $(".btnCursor").on("mouseenter", function() {
            $('#cursor').addClass("active");
            $('#stalker').addClass("active");
        });
 
        $(".btnCursor").on("mouseleave", function() {
            $('#cursor').removeClass("active");
            $('#stalker').removeClass("active");
        });
    });
}


//header

$(function() {
    $(window).scroll(function () {
        if ($(this).scrollTop() > 70) {
        //ボタンの表示方法
            $('header').addClass('active');
        } else {
        //ボタンの非表示方法
            $('header').removeClass('active');
        }
    });
});

var startPos = 0,winScrollTop = 0;
$(window).on('scroll',function(){
    if ($(this).scrollTop() > 70) {
        //ボタンの表示方法
        winScrollTop = $(this).scrollTop();
        if (winScrollTop > startPos) {
          $('header').addClass('hide');
        } else {
          $('header').removeClass('hide');
        }
    startPos = winScrollTop;

    } else {
        //ボタンの非表示方法
        $('header').removeClass('hide');
    }

    
});


//PageTop

$(function(){
  $('#totop').click(function(){
    $('html,body').animate({scrollTop:0}, 'easeInQuad');
  });
});


//Scroll

jQuery(function($){
 $('.scrollNav').click(function(){
  $doc = $('body,html');
  var scrTop = $('#latest').offset().top - 90;
  $doc.animate({ scrollTop: scrTop }, 'easeInQuad');
 });
});


