//slideMenu - Service

$(function() {
    $(window).scroll(function () {
        if ($(this).scrollTop() > 70) {
        //ボタンの表示方法
            $('.slideMenu').addClass('scroll');
        } else {
        //ボタンの非表示方法
            $('.slideMenu').removeClass('scroll');
        }
    });
});

$(function() {
    $(window).scroll(function () {
        $('.slideService').removeClass('active');
    });
});

$(document).ready(function(){
  $(".serviceBtnInner").mouseover(function(){
    if ($(".serviceBtn").hasClass("addCurrent")) {
      //class addCurrentがあれば
    } else if (!$(".serviceBtn").hasClass("addCurrent")) {
      $('.serviceBtn').addClass('underline');
      $('.addCurrent').addClass('closeline');
    }

    $('.worksHead').addClass('white');
    $('.slideService').addClass('active');
    $('#headWrap').addClass('slideLine');
  });
});


$(document).ready(function(){
  $(".slideService").on('mouseover',   function(e) {
    if ($(".serviceBtn").hasClass("addCurrent")) {
      //class addCurrentがあれば
    } else if (!$(".serviceBtn").hasClass("addCurrent")) {
      $('.serviceBtn').addClass('underline');
      $('.addCurrent').addClass('closeline');
    }

    $('.worksHead').addClass('white');
    $('.slideService').addClass('active');
    $('#headWrap').addClass('slideLine');
  });
});


$(document).on('mouseover',   function(e) {
  if (!$(e.target).closest('.serviceBtn,.slideService').length) {
    if ($(".serviceBtn").hasClass("underline")) {
      
      $('.worksHead').removeClass('white');
      $('.slideService').removeClass('active');
      $('#headWrap').removeClass('slideLine');
      $('.serviceBtn').removeClass('underline');
      $('.addCurrent').removeClass('closeline');
      
   } else if ($(".serviceBtn").hasClass("addCurrent")) {
      
      $('.worksHead').removeClass('white');
      $('.slideService').removeClass('active');
      $('#headWrap').removeClass('slideLine');
      
   }
  }
});


$(document).on('click',   function(e) {
  if (!$(e.target).closest('.serviceBtn,.slideService').length) {
    if ($(".serviceBtn").hasClass("underline")) {
      
      $('.worksHead').removeClass('white');
      $('.slideService').removeClass('active');
      $('#headWrap').removeClass('slideLine');
      $('.serviceBtn').removeClass('underline');
      $('.addCurrent').removeClass('closeline');
      
   } else if ($(".serviceBtn").hasClass("addCurrent")) {
      
      $('.worksHead').removeClass('white');
      $('.slideService').removeClass('active');
      $('#headWrap').removeClass('slideLine');
      
   }
  }
});


