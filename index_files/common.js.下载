//About us

$('.aboutSlider').click(function () {
var dateBox = $('.slick-slide');
  if(dateBox.is('[aria-hidden=true]')){
    $('.listCont').addClass('fadeInUp');
  }else{
    $('.listCont').removeClass('fadeInUp');
  }
});



